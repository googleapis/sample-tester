# This script runs all tests and examples and verifies they work as expected.

python3 -m unittest discover --start-directory . --pattern '*_test.py' --verbose

if [ $? -ne 0 ]; then
  echo "Test failed with code $?"
  exit
fi

tests_passed=true

for test_script in `find examples/ -type f -name run.sh`; do
  test_directory="$( dirname "$test_script" )"
  example_name="$( basename "$test_directory" )"
  echo "Running $example_name"
  if $test_script; then
    echo "Checks: OK"
  else
    echo "Checks: ERROR (status: $?)"
    tests_passed=false
  fi
done

if [ "$tests_passed" = "true" ]; then
  echo "Tests passed"
else
  echo "Tests failed"
fi
